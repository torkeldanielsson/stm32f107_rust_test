{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "cwd": "${workspaceRoot}",
            "executable": "./target/thumbv7m-none-eabi/debug/blink",
            "name": "Debug (OpenOCD)",
            "device": "STM32F107VCT6",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f1x.cfg"
            ],
            "runToMain": true,
            "preLaunchTask": "build_start",
            "postLaunchCommands": [
                "monitor arm semihosting enable",
                "set print asm-demangle on",
            ],
        }
    ]
}